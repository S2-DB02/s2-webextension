{
  "name": "BAS World Bug Reporter",
  "description": "Bug reporting tool for BAS employees.",
  "version": "0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "/js/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "BAS World Bug Reporter",
    "default_popup": "/views/popup.html",
    "default_icon": {
      "16": "/images/icon16.png",
      "32": "/images/icon32.png",
      "48": "/images/icon64.png"
    }
  },
  "options_page": "/views/options.html",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
     "tabs",
     "desktopCapture",
     "tabCapture"
  ],
  "icons": {
    "16": "/images/icon16.png",
    "32": "/images/icon32.png",
    "48": "/images/icon64.png"
  }
}
